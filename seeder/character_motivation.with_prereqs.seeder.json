    "tools": [
      {
        "dial": "Escalate stakes",
        "direction": "+",
        "note": "Add deadline, betrayal, or loss to heat the want."
      },
      {
        "dial": "Temporary relief",
        "direction": "−",
        "note": "Give a small win or comfort to cool urgency."
      },
      {
        "dial": "Intensify resistance",
        "direction": "+",
        "note": "Make the pushback personal to amplify drive."
      },
      {
        "dial": "Clear the path",
        "direction": "−",
        "note": "Reduce barriers; desire cools or redirects."
      },
      {
        "dial": "Public oath",
        "direction": "+",
        "note": "Saying it out loud raises risk and weight."
      },
      {
        "dial": "Keep it secret",
        "direction": "−",
        "note": "Let the want simmer; use slips and rituals."
      },
      {
        "dial": "Blend pressures",
        "direction": "+",
        "note": "Mix inner guilt with outside threat."
      },
      {
        "dial": "Symbolic act",
        "direction": "+",
        "note": "Ritual, token, or vow that marks intensity."
      },
      {
        "dial": "Ally influence",
        "direction": "+/−",
        "note": "Mentor fuels the fire; friend eases it."
      }
    ],
